<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.suchteam.opendata.Subscribe" table="subscribe">
        <id name="subscribeId" column="subscribe_id">
            <generator class="native" />
        </id>
        <property name="emailAddress" column="email_address"/>
        <property name="sentDate" column="sent_date"/>
 		<property name="unsubscribed" column="unsubscribed"/>
        <many-to-one class="com.suchteam.opendata.Dataset" name="dataset" column="dataset_id"/>
        <set name="assertions" table="subscribe_assertions">
            <key>
                <column name="subscribe_assertion_id" not-null="true" />
            </key>
            <one-to-many entity-name="com.suchteam.opendata.SubscribeAssertion"/>
        </set>
    </class>
</hibernate-mapping>